<h1>My Blog</h1>
<% @posts.each do |post| %>
	<h2><%=post.title %></h2>
	<p><%=post.content %></p>
	<small><%=post.created_at %></small>
	<p>
		<%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" } %>
	</p>
	<p>
		<%= link_to "Edit", controller: "posts", action:"edit" , id:post.id %>
	</p>
<% end %>